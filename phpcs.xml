<?xml version="1.0"?>
<ruleset name="Coding standard">
    <arg value="p"/>
    <arg value="n"/>
    <arg name="colors"/>
    <arg name="cache" value="var/.phpcs.json"/>
    <arg name="extensions" value="php" />

    <exclude-pattern>node_modules/</exclude-pattern>
    <exclude-pattern>local/components/**/class.php</exclude-pattern>

    <rule ref="PSR1"/>
    <rule ref="PSR12"/>

    <file>./local/php_interface/</file>
    <file>./local/components/</file>
</ruleset>